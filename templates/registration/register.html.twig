{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="text-center">Inscription</h1>
    <section>
        <div class="container h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                    class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    {{ form_start(registrationForm) }}
                        <fieldset>
                            <legend>Identité de l'agence</legend>
                            {{ form_row(registrationForm.name) }}
                        </fieldset>
                        <fieldset>
                            <legend>Coordonnées de l'agence</legend>
                            {{ form_row(registrationForm.address) }}
                            {{ form_row(registrationForm.city) }}
                            {{ form_row(registrationForm.zipCode) }}
                            {{ form_row(registrationForm.phone) }}
                            {{ form_row(registrationForm.email) }}
                        </fieldset>
                        <fieldset>
                            <legend>Frais d'agence</legend>
                            {{ form_row(registrationForm.agencyFees) }}
                        </fieldset>
                        <fieldset>
                            <legend>Sécurité</legend>
                            {{ form_row(registrationForm.plainPassword) }}
                        </fieldset>

                        <button type="submit" class="btn btn-dark ms-3 mb-5">M'inscrire</button>
                    {{ form_end(registrationForm) }}
                    <a href="{{path('app_login')}}" class="btn btn-secondary btn-lg my-3">Me connecter</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
