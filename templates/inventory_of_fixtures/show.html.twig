{% extends 'base.html.twig' %}

{% block title %}Suppression d'un état des lieux
{% endblock %}

{% block body %}
	<h1 class="ms-3">Supprimer un état des lieux</h1>
	<div class="table-responsive-md">
		<table class="table table-striped table-hover table-sm">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ inventory_of_fixture.id }}</td>
				</tr>
				<tr>
					<th>Date</th>
					<td>{{ inventory_of_fixture.createdAt ? inventory_of_fixture.createdAt|date('d-m-Y H:i:s')}}</td>
				</tr>
				<tr>
					<th>Statut</th>
					<td>{{ inventory_of_fixture.status ? 'Entrée' : 'Sortie' }}</td>
				</tr>
				<tr>
					<th>Commentaires</th>
					<td>{{ inventory_of_fixture.comments }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="ms-3">
		{{ include('inventory_of_fixtures/_delete_form.html.twig') }}
	</div>
	<a href="{{ path('app_inventory_of_fixtures_index') }}" class="btn btn-secondary ms-3 mt-2 mb-5">Retour à la liste des inventaires</a>
{% endblock %}
