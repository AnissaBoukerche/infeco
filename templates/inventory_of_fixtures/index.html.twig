{% extends 'base.html.twig' %}

{% block title %}États des lieux
{% endblock %}

{% block body %}
	<h1 class="text-center mb-3">Liste des états des lieux</h1>
	<div class="table-responsive-md">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th>Statut : entrée ou sortie</th>
					<th>Commentaires</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for inventory_of_fixture in inventory_of_fixtures %}
					<tr>
						<td>{{ inventory_of_fixture.id }}</td>
						<td>{{ inventory_of_fixture.createdAt ? inventory_of_fixture.createdAt|date('d-m-Y H:i:s')}}</td>
						<td>{{ inventory_of_fixture.status ? 'Entrée' : 'Sortie' }}</td>
						<td>{{ inventory_of_fixture.comments }}</td>
						<td>
							<a href="{{ path('app_inventory_of_fixtures_edit', {'id': inventory_of_fixture.id}) }}" class="btn btn-warning">État des lieux</a>
						</td>
						<td>
							<a href="{{ path('app_inventory_of_fixtures_delete', {'id': inventory_of_fixture.id}) }}" class="btn btn-danger">État des lieux</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucun inventaire trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
