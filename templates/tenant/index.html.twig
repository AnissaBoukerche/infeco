{% extends 'base.html.twig' %}

{% block title %}Lise des locataires{% endblock %}

{% block body %}
    <h1  class="text-center mb-3">Lise des locataires</h1>

    <table class="table table-striped table-hover ms-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Lieu de naissance</th>
                <th>Statut marital</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Guarant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tenant in tenants %}
            <tr>
                <td>{{ tenant.id }}</td>
                <td>{{ tenant.lastName }}</td>
                <td>{{ tenant.firstName }}</td>
                <td>{{ tenant.dateOfBirth ? tenant.dateOfBirth|date('d-m-Y') : '' }}</td>
                <td>{{ tenant.birthPlace }}</td>
                <td>{{ tenant.civilStatus }}</td>
                <td>{{ tenant.email }}</td>
                <td>{{ tenant.phone }}</td>
                <td>{{ tenant.address }}</td>
                <td>{{ tenant.city }}</td>
                <td>{{ tenant.zipCode }}</td>
                <td>{{ tenant.guarantor }}</td>
                <td>
                    <a href="{{ path('app_tenant_edit', {'id': tenant.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('app_tenant_delete', {'id': tenant.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Aucun locataire trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
