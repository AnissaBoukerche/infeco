{% extends 'base.html.twig' %}

{% block title %}Détails d'un locataire
{% endblock %}

{% block body %}
	<h1 class="ms-3">Détails d'un locataire</h1>
	<div class="table-responsive-md">
		<table class="table table-striped table-hover table-sm">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ tenant.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ tenant.lastName }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ tenant.firstName }}</td>
				</tr>
				<tr>
					<th>Date de naissance</th>
					<td>{{ tenant.dateOfBirth ? tenant.dateOfBirth|date('d-m-Y')}}</td>
				</tr>
				<tr>
					<th>Lieu de naissance</th>
					<td>{{ tenant.birthPlace }}</td>
				</tr>
				<tr>
					<th>Statut marital</th>
					<td>{{ tenant.civilStatus }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ tenant.email }}</td>
				</tr>
				<tr>
					<th>Numéro de téléphone</th>
					<td>{{ tenant.phone }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ tenant.address }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ tenant.city }}</td>
				</tr>
				<tr>
					<th>Code Postal</th>
					<td>{{ tenant.zipCode }}</td>
				</tr>
				<tr>
					<th>Garant</th>
					<td>{{ tenant.guarantor }}</td>
				</tr>
				<tr>
					<th>Pièce d'identité du garant</th>
					<td><img src="{{ vich_uploader_asset(tenant, 'imageFile')}}" alt="{{tenant.imagefile}}"></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="ms-3">
		{{ include('tenant/_delete_form.html.twig') }}
	</div>

	<a href="{{ path('app_tenant_index') }}" class="btn btn-secondary ms-3 mt-2 mb-5">Retour à la liste des locataires</a>

{% endblock %}
