{% extends 'base.html.twig' %}

{% block title %}Suppression d'un paiement
{% endblock %}

{% block body %}
	<h1 class="ms-3">Suppression d'un paiement</h1>
	<div class="table-responsive-md">
		<table class="table table-striped table-hover">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ payment.id }}</td>
				</tr>
				<tr>
					<th>Date de paiement</th>
					<td>{{ payment.paymentAt ? payment.paymentAt|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>Montant</th>
					<td>{{ payment.amount }}</td>
				</tr>
				<tr>
					<th>Type de paiement</th>
					<td>{{ payment.type }}</td>
				</tr>
				<tr>
					<th>Méthode de paiement</th>
					<td>{{ payment.paymentMethod }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="ms-3">
		{{ include('payment/_delete_form.html.twig') }}
	</div>

	<a href="{{ path('app_payment_index') }}" class="btn btn-secondary ms-3 mt-2 mb-5">Retour à la liste des paiements</a>

{% endblock %}
