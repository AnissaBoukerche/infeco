<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de paiement</th>
                <th>Montant</th>
                <th>Type de paiement</th>
                <th>Méthode de paiement</th>
                {% if is_action %}
                <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.paymentAt ? payment.paymentAt|date('Y-m-d') : '' }}</td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.type }}</td>
                <td>{{ payment.paymentMethod }}</td>
                {% if is_action %}
                <td>
                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('app_payment_delete', {'id': payment.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun paiement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>