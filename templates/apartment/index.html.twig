{% extends 'base.html.twig' %}

{% block title %}Apartments
{% endblock %}

{% block body %}
	<h1 class="text-center mb-3">Liste des apartments</h1>
	<div class="table-responsive-md">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Adresse</th>
					<th>Complément d'adresse</th>
					<th>Ville</th>
					<th>Code postal</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for apartment in apartments %}
					<tr>
						<td>{{ apartment.address }}</td>
						<td>{{ apartment.additionalAddressDetails }}</td>
						<td>{{ apartment.city }}</td>
						<td>{{ apartment.zipCode }}</td>
						<td>
							<a href="{{ path('app_apartment_edit', {'id': apartment.id}) }}" class="btn btn-warning">Appartement</a>
						</td>
						<td>
							<a href="{{ path('app_apartment_delete', {'id': apartment.id}) }}" class="btn btn-danger">Appartement</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucun appartment trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<a href="{{ path('app_apartment_new') }}" class="btn btn-dark ms-3 mb-5">Ajouter un appartement</a>
{% endblock %}
